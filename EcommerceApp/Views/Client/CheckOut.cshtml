@model IEnumerable<EcommerceApp.Models.Cart>

@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CheckOut</h2>


   @if (!Model.Any())
   {
       <p>you haven't purchased any product till yet</p>   
   }
   else
   {
       <table class="table table-hover">
           <tr>
               <th>
                   @Html.DisplayNameFor(model => model.UserName)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.Price)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.Quantity)
               </th>
               @*<th>@Html.DisplayNameFor(model => model.)</th>*@
           </tr>

           @foreach (var item in Model)
           {
               <tr>
                   <td>
                       @Html.DisplayFor(modelItem => item.Product.Name)
                   </td>
                   <td>
                       @Html.DisplayFor(modelItem => item.Product.Price)
                   </td>
                   <td>
                       @Html.DisplayFor(modelItem => item.Quantity)
                   </td>
                   <td>


                   </td>
               </tr>
           }


       </table>
       <footer style="background: #2b3e50; width: 100%" class="row container-fluid">
           <div class="col-md-">

           </div>
           <div class="col-md-6">
               <p> <strong> Total Bill is:</strong><b> @Model.Sum(x => Convert.ToInt32(x.Product.Price))</b></p>
               <form></form>

           </div>

           <form action="/Payement/Create" method="post">
               <div class="col-md-6">
                   <button class="btn btn-primary">Proceed to Payement Gateway </button>
               </div>
           </form>
       </footer>
   }